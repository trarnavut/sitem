<Window x:Class="BHealthyApp.Window1"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"

        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

        xmlns:local="clr-namespace:BHealthyApp"

        Title="Calculate BMI" Height="450" Width="600">

       
    <Grid>

               
        <Grid.ColumnDefinitions>

                       
            <ColumnDefinition Width="*"/>

                       
            <ColumnDefinition Width="*"/>

                   
        </Grid.ColumnDefinitions>

               
        <StackPanel Grid.Column="0" Margin="10">

                       
            <local:UserControl1 x:Name="bmiControl" />

                   
        </StackPanel>

               
        <StackPanel Grid.Column="1" Margin="10">

                       
            <Label Content="Select Physical Activities:" />

                       
            <ListBox x:Name="lstActivities" SelectionMode="Multiple" Height="200">

                               
                <ListBoxItem>Jogging</ListBoxItem>

                               
                <ListBoxItem>Running</ListBoxItem>

                               
                <ListBoxItem>Swimming</ListBoxItem>

                               
                <ListBoxItem>Play Basketball</ListBoxItem>

                               
                <ListBoxItem>Play Tennis</ListBoxItem>

                           
            </ListBox>

                       
            <Button x:Name="btnResult" Content="Result" Click="btnResult_Click" Margin="0,10,0,0"/>

                       
            <Button x:Name="btnVisitWeb" Content="Visit Be Healthy Web" Click="btnVisitWeb_Click" Margin="0,10,0,0"/>

                       
            <Button x:Name="btnBackToMenu" Content="Back to Menu" Click="btnBackToMenu_Click" Margin="0,10,0,0"/>

                   
        </StackPanel>

           
    </Grid>

</Window>