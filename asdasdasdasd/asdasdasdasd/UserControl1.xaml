<UserControl x:Class="BHealthyApp.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid>
        <StackPanel>
            <Label Content="Enter Height in m." />
            <TextBox x:Name="txtHeight" Margin="0,0,0,10" />
            <Label Content="Enter Weight in kg." />
            <TextBox x:Name="txtWeight" Margin="0,0,0,10" />
            <Button x:Name="btnCalculate" Content="Calculate" Click="Calculate_Click" Margin="0,0,0,10"/>
            <Label Content="Your BMI:" />
            <TextBox x:Name="txtBMI" IsReadOnly="True" />
        </StackPanel>
    </Grid>
</UserControl>
