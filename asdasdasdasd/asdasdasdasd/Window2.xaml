<Window x:Class="BHealthyApp.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BeHealthy Web" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button x:Name="btnShowWebPage" Content="Show Web Page" Click="btnShowWebPage_Click" Margin="5"/>
            <Button x:Name="btnBackToMenu" Content="Back to Menu" Click="btnBackToMenu_Click" Margin="5"/>
        </StackPanel>
        <WebBrowser x:Name="webBrowser" Grid.Row="1"/>
    </Grid>
</Window>