<Window x:Class="HealthApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HealthApp"
        Title="BMI Activities" Height="434" Width="668">
    <Grid Margin="0,0,10,-6">
        
        <local:BMIUserControl HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,17,0,0" Loaded="BMIUserControl_Loaded" />

        
        <Label Content="Select Physical Activities:"
               HorizontalAlignment="Right" VerticalAlignment="Top"
               Margin="0,11,250,0" />
        <ListBox Name="ActivitiesListBox"
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,42,190,0" Width="200" Height="150"
                 SelectionMode="Multiple">
            <ListBoxItem>Jogging</ListBoxItem>
            <ListBoxItem>Running</ListBoxItem>
            <ListBoxItem>Swimming</ListBoxItem>
            <ListBoxItem>Play Tennis</ListBoxItem>
            <ListBoxItem>Play Basketball</ListBoxItem>
        </ListBox>

        
        <Button Content="Result"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,20,346" Width="150"
                Click="ResultButton_Click" />
        <Button Content="Visit Be Healthy Web"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,20,300" Width="150"
                Click="VisitWebButton_Click" />
        <Button Content="Back to Menu"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,20,257" Width="150"
                Click="BackButton_Click" />
    </Grid>
</Window>
