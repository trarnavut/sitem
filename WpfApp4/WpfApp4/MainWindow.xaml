<Window x:Class="HealthApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu" Height="400" Width="300">
    <Grid>
        <Label Content="Welcome to B-HEALTHY APP"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               FontSize="16"
               Foreground="DarkBlue"
               Margin="0,20,0,0" />
        <Button Content="BMI Activities"
                Width="200"
                Height="50"
                Background="Azure"
                FontSize="16"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,-40,0,0"
                Click="BMIButton_Click" />
        <Button Content="BeHealthy Web Page"
                Width="200"
                Height="50"
                Background="Azure"
                FontSize="16"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,40,0,0"
                Click="WebPageButton_Click" />
        <Button Content="Exit"
                Width="200"
                Height="50"
                Background="Azure"
                FontSize="16"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Click="ExitButton_Click" />
    </Grid>
</Window>