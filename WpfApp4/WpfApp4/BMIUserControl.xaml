<UserControl x:Class="HealthApp.BMIUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="200" Width="250">
    <Grid>
        <Label Content="Enter Height in m:"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="10,10,0,0" />
        <TextBox Name="HeightTextBox"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Margin="120,10,10,0" Width="100" />

        <Label Content="Enter Weight in kg:"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="10,50,0,0" />
        <TextBox Name="WeightTextBox"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Margin="120,50,10,0" Width="100" />

        <Button Content="Calculate"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,90,0,0" Width="100"
                Click="CalculateButton_Click" />

        <Label Content="Your BMI:"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Margin="10,130,0,0" />
        <TextBox Name="ResultTextBox"
                 HorizontalAlignment="Left" VerticalAlignment="Top"
                 Margin="120,130,10,0" Width="100"
                 IsReadOnly="True" />
    </Grid>
</UserControl>
