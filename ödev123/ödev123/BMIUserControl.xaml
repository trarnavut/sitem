<UserControl x:Class="BHealthyApp.BMIUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid>
        <StackPanel>
            <Label Content="Enter Height in m:" />
            <TextBox x:Name="txtHeight" />
            <Label Content="Enter Weight in kg:" />
            <TextBox x:Name="txtWeight" />
            <Button x:Name="btnCalculate" Content="Calculate" Click="btnCalculate_Click" Margin="0,5"/>
            <Label Content="Your BMI:" />
            <TextBox x:Name="txtBMI" IsReadOnly="True" />
        </StackPanel>
    </Grid>
</UserControl>