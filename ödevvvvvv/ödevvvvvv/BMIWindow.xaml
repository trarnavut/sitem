<Window x:Class="HealthApp.BMIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BMI &amp; Activities" Height="450" Width="600">
    <Grid>
        <!-- Ana layout tanımları -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- BMI Hesaplama Alanı -->
        <StackPanel Grid.Column="0" Margin="10">
            <Label Content="Enter Height (in meters):" FontWeight="Bold" FontSize="14" Margin="0,5"/>
            <TextBox x:Name="HeightInput" Margin="0,5"/>
            <Label Content="Enter Weight (in kg):" FontWeight="Bold" FontSize="14" Margin="10,5"/>
            <TextBox x:Name="WeightInput" Margin="0,5"/>
            <Button Content="Calculate BMI" Click="CalculateBMI" Margin="0,10" Background="Azure" FontWeight="Bold"/>
            <TextBox x:Name="BMIResult" IsReadOnly="True" Height="30" Margin="0,5"/>
        </StackPanel>

        <!-- Fiziksel Aktiviteler Alanı -->
        <StackPanel Grid.Column="1" Margin="10">
            <Label Content="Select Physical Activities:" FontWeight="Bold" FontSize="14" Margin="0,5"/>
            <ListBox x:Name="ActivitiesList" SelectionMode="Multiple" Margin="0,5">
                <ListBoxItem Content="Jogging"/>
                <ListBoxItem Content="Running"/>
                <ListBoxItem Content="Swimming"/>
                <ListBoxItem Content="Play Tennis"/>
                <ListBoxItem Content="Play Basketball"/>
            </ListBox>
            <Button Content="Check Result" Click="CheckActivities" Margin="0,10" Background="Azure" FontWeight="Bold"/>
            <Button Content="Visit BeHealthy Web" Click="OpenWebWindow" Margin="0,5" Background="LightBlue"/>
            <Button Content="Back to Menu" Click="BackToMenu" Margin="0,5" Background="LightGray"/>
        </StackPanel>
    </Grid>
</Window>
